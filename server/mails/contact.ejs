<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>New Contact Message</title>
    <style>
      body { font-family: Arial, sans-serif; color: #111; }
      .container { padding: 16px; }
      .meta { margin-bottom: 12px; }
      .label { font-weight: 600; }
      .message { white-space: pre-wrap; background: #f8f8f8; padding: 12px; border-radius: 6px; }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>New contact message</h2>
      <div class="meta">
        <div><span class="label">Name:</span> <%= name %></div>
        <div><span class="label">Email:</span> <%= email %></div>
        <% if (phone) { %>
          <div><span class="label">Phone:</span> <%= phone %></div>
        <% } %>
        <% if (subject) { %>
          <div><span class="label">Subject:</span> <%= subject %></div>
        <% } %>
      </div>

      <div>
        <div class="label">Message:</div>
        <div class="message"><%= message %></div>
      </div>

      <hr />
      <p>This message was sent from the Flyobo contact form.</p>
    </div>
  </body>
</html>
